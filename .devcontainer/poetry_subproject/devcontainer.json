
{
    "name": "poetry_subproject",

    "build": {
        "dockerfile": "Dockerfile",
        "context": "../.."
    },

    "containerEnv": {
        "HOME": "/workspace"
    },

    "customizations": {
        "kernels": [
            {
                "env_name": "default",
                "remote_path": "/home/jovyan/.local/share/jupyter/kernels/default/kernel.json",
                "local_path": ".devcontainer/kernel.json"
            }
        ]
    },

    "postCreateCommand": "bash .devcontainer/post-create.sh",

    "remoteUser": "jovyan"
}
